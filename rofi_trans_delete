#!/usr/bin/env bash

function refresh {
    sh -c 'sleep 0.05 ; env default="delete" rofi_trans' &
    pkill -u $USER rofi
}

function text_source {
    if [[ ! -z "$text" ]]; then
        echo "$(grep -P "#\t${text}" $transHistory | head -1)"
    else
        echo "$@"
    fi
}

# configure
pattern="$(text_source "$@")"
unset text

touch $transHistory

# delete pattern
if [[ -n $pattern ]]; then

    # pattern escaping
    pattern="$(echo "$pattern" | sed -e 's/[]\/$*.^[]/\\&/g' )"

    # remove entry by specified pattern
    his="$(cat $transHistory)"
    echo "$his" | sed "/^${pattern}$/d" > $transHistory

    # Auto refresh content of each script mode
    if [[ "$auto_refresh" == "1" ]]; then
        refresh
    fi
fi

# print history
tac $transHistory
